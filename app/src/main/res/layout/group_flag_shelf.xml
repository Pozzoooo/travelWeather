<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:parentTag="android.widget.LinearLayout"
	tools:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/lDragTheFlag"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:lines="3"
		android:gravity="center|bottom"
		android:text="@string/tutorial_dragTheFlags"/>

	<ImageView
		android:id="@+id/startFlag"
		style="@style/buttonsOnButtonBar"
		android:src="@drawable/start_flag"
		android:contentDescription="@string/startPosition"/>

	<ImageView
		android:id="@+id/waypoint"
		style="@style/buttonsOnButtonBar"
		android:visibility="gone"
		tools:visibility="visible"
		android:src="@drawable/waypoint"
		android:contentDescription="@string/startPosition"/>

	<ImageView
		android:id="@+id/finishFlag"
		style="@style/buttonsOnButtonBar"
		android:src="@drawable/finish_flag"
		android:contentDescription="@string/finishPosition"
		android:alpha=".4"/>
</merge>
